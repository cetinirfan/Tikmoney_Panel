<%- include('./src/header'); %>
<%- include('./src/headerbar'); %>
        <div id="content" class="main-content">
            <div class="container">
                <div class="container">
                    <div class="row layout-top-spacing">
                        <div class="col-lg-12 col-12 layout-spacing">
                            <div class="statbox widget box box-shadow">
                                <div class="widget-header">                                
                                    <div class="row">
                                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                            <h4>Duyuru Düzenle</h4>
                                        </div>
                                    </div>
                                </div>
                                    <form action='../../../duyurular/duyuru_duzenle/<%=find_duyuru._id%>' method='POST'>
                                        <div class="form-group mb-4">
                                            <label for="title">Başlık</label>
                                            <input type="text" name="title" class="form-control" id="title" value='<%= find_duyuru.title%>' placeholder="Ad Soyad Giriniz...">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label for="description">Açıklama</label>
                                            <textarea class="form-control" id="description" name="description" rows="4" cols="50"><%= find_duyuru.description%></textarea>
                                        </div>
                                        <button type="submit" name="action" class="mt-4 mb-4 btn btn-primary">KAYDET</button>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
