<%- include('./src/header'); %>
<%- include('./src/headerbar'); %>
<div id="content" class="main-content">
    <div class="layout-px-spacing">                
            
        <div class="account-settings-container layout-top-spacing">

            <div class="account-content">
                <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                            <form id="general-info" class="section general-info">
                                <div class="info">
                                    <h6 class="">Görev Bilgileri</h6>
                                    <div class="row">
                                        <div class="col-lg-11 mx-auto">
                                            <div class="row">
                                                <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4">
                                                    <div class="form">
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <div class="upload">
                                                                        <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i>Görev Dili</p>
                                                                    </div>
                                                                    <label for="fullName">&nbsp;&nbsp;<%= find_gorev.language==='tr-TR' ? 'Türkçe' : 'İngilizce' %></label>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <div class="upload">
                                                                        <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> Verilecek Tikmoney</p>
                                                                    </div>
                                                                    <label for="fullName">&nbsp;&nbsp;<%= find_gorev.tikmoney%></label>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <div class="upload">
                                                                        <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> Görev Linki</p>
                                                                    </div>
                                                                    <label for="fullName">&nbsp;&nbsp;<%= find_gorev.taskLink%></label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="upload">
                                                                <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> Görev Açıklama</p>
                                                            </div>
                                                            <input disabled type="text" class="form-control mb-4" id="profession" placeholder="Görev Açıklama" value="<%= find_gorev.taskDescription%>">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                            <form id="general-info" class="section general-info">
                                <div class="info">
                                    <h6 class="">Kullanıcı Bilgileri</h6>
                                    <div class="row">
                                        <div class="col-lg-11 mx-auto">
                                            <div class="row">
                                                <div class="col-xl-2 col-lg-12 col-md-4">

                                                        <div id="demo-test-gallery" class="demo-gallery" data-pswp-uid="1">
                        
                                                            <a class="img-1" href="<%='http://213.238.178.197:7092'+find_gorev.provedImage%>" data-size="200x200" data-med="<%='http://213.238.178.197:7092'+find_gorev.provedImage%>" data-med-size="200x200" data-author="Samuel Rohl">
                                                                <img src="<%='http://213.238.178.197:7092'+find_gorev.provedImage%>" alt="image-gallery">
                                                            </a>
                        
                                                        </div>
                        
                                                        <!-- Root element of PhotoSwipe. Must have class pswp. -->
                                                        <div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">
                        
                                                            <!-- Background of PhotoSwipe. It's a separate element, as animating opacity is faster than rgba(). -->
                                                            <div class="pswp__bg"></div>
                        
                                                            <!-- Slides wrapper with overflow:hidden. -->
                                                            <div class="pswp__scroll-wrap">
                                                                <!-- Container that holds slides. PhotoSwipe keeps only 3 slides in DOM to save memory. -->
                                                                <!-- don't modify these 3 pswp__item elements, data is added later on. -->
                                                                <div class="pswp__container">
                                                                    <div class="pswp__item"></div>
                                                                    <div class="pswp__item"></div>
                                                                    <div class="pswp__item"></div>
                                                                </div>
                        
                                                                <!-- Default (PhotoSwipeUI_Default) interface on top of sliding area. Can be changed. -->
                                                                <div class="pswp__ui pswp__ui--hidden">
                        
                                                                    <div class="pswp__top-bar">
                        
                                                                        <!--  Controls are self-explanatory. Order can be changed. -->
                                                                        <div class="pswp__counter"></div>
                                                                        <button class="pswp__button pswp__button--share" title="Share"></button>
                                                                        <button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>
                                                                        <button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>
                        
                                                                        <!-- element will get class pswp__preloader--active when preloader is running -->
                                                                        <div class="pswp__preloader">
                                                                            <div class="pswp__preloader__icn">
                                                                              <div class="pswp__preloader__cut">
                                                                                <div class="pswp__preloader__donut"></div>
                                                                              </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
                                                                        <div class="pswp__share-tooltip"></div> 
                                                                    </div>
                                                                    <button class="pswp__button pswp__button--arrow--left" title="Previous (arrow left)">
                                                                    </button>
                                                                    <button class="pswp__button pswp__button--arrow--right" title="Next (arrow right)">
                                                                    </button>
                                                                    <div class="pswp__caption">
                                                                        <div class="pswp__caption__center"></div>
                                                                    </div>
                        
                                                                  </div>
                                                            </div>
                                                        </div>
                                                </div>
                                                <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4">
                                                    <div class="form">
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <div class="upload">
                                                                        <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> Kullanıcı Adı</p>
                                                                    </div>
                                                                    <label for="fullName">&nbsp;&nbsp;<%= find_gorev.userName%></label>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <div class="upload">
                                                                        <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> Kullanıcı Mail</p>
                                                                    </div>
                                                                    <label for="fullName">&nbsp;&nbsp;<%= find_gorev.mail%></label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="upload">
                                                                <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i>Görev Kanıt Açıklama</p>
                                                            </div>
                                                            <input disabled type="text" class="form-control mb-4" id="profession" placeholder="Görev Kanıt Açıklama" value="<%= find_gorev.provedDescription%>">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <% if(find_gorev.status !==0){ %>
                            <% if(find_gorev.status ===1){ %>
                                <% } else { %>
                                    <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                                        <form class="section about">
                                            <div class="info">
                                                <h5 class="">Red Sebebi</h5>
                                                <h7 class=""><%= find_gorev.rejectDescription%></h7>
                                            </div>
                                        </form>
                                    </div>
                                <% } %>
                            <% } else { %>
                                <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                                    <form class="section about" action='../../../gorev/gorev_reddet/<%=find_gorev._id%>' method='POST'>
                                        <div class="info">
                                            <h5 class="">Görevi Cevapla</h5>
                                            <% if (message.length > 0 ) { %>
                                                <div class="<%= message[1] %>"  role="alert"> 
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                                                    <%= message[0] %> 
                                                </div>
                                            <% } %>
                                            <div class="row">
                                                <div class="col-md-11 mx-auto">
                                                    <div class="form-group">
                                                        <label for="rejectDescription">Reddetme Sebebi</label>
                                                        <textarea class="form-control" name="rejectDescription" id="rejectDescription" placeholder="Reddetme Sebebi Giriniz..." rows="10"></textarea>
                                                    </div>
                                                    <button type="submit" name="action" class="btn btn-danger mb-2">Reddet</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    &nbsp;
                                    <form class="section about" action='../../../gorev/gorev_onayla/<%=find_gorev._id%>' method='POST'>
                                        <div class="info">
                                            <div class="row">
                                                <div class="col-md-11 mx-auto">
                                                    <button type="submit" name="action" class="btn btn-success mb-2">Onayla</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                        <% } %>
                        
                    </div>
                </div>
            </div>

        </div>

        </div>
</div>
<%- include('./src/footer'); %> 