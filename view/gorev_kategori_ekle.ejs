<%- include('./src/header'); %> <%- include('./src/headerbar'); %>
<div id="content" class="main-content">
  <div class="container">
    <div class="container">
      <div class="row layout-top-spacing">
        <div class="col-lg-12 col-12 layout-spacing">
          <% if (message.length > 0 ) { %>
            <div class="<%= message[1] %>"  role="alert"> 
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                <%= message[0] %> 
            </div>
        <% } %>
          <div class="statbox widget box box-shadow">
            <div class="widget-header">
              <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                  <h4>Görev Kategori Ekle</h4>
                </div>
              </div>
            </div>
          
            <form action="/gorev/gorev_kategori_ekle/" method="POST">
              <div class="form-group mb-4">
                <label for="title">Görev Kategori Adı</label>
                <input
                  type="text"
                  name="title"
                  class="form-control"
                  id="title"
                  placeholder="Görev Kategori Adı Giriniz..."
                />
              </div>
              <div class="form-group mb-4">
                <label for="exampleFormControlSelect1">Dil</label>
                <select
                  name="language"
                  id="language"
                  class="form-control"
                  id="exampleFormControlSelect1"
                >
                  <option value="Belirtilmedi">Dil Seç</option>
                  <option value="tr-TR">Türkçe</option>
                  <option value="en-Us">İngilizce</option>
                </select>
              </div>
              <button
                type="submit"
                name="action"
                class="mt-4 mb-4 btn btn-primary"
              >
                OLUŞTUR
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('./src/footer'); %>
</div>
