<%- include('./src/header'); %>
<%- include('./src/headerbar'); %>
<div id="content" class="main-content">
    <div class="layout-px-spacing">                
            
        <div class="account-settings-container layout-top-spacing">

            <div class="account-content">
                <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                            <form id="general-info" class="section general-info">
                                <div class="info">
                                    <h6 class="">Ürün Bilgileri</h6>
                                    <div class="row">
                                        <div class="col-lg-11 mx-auto">
                                            <div class="row">
                                                <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4">
                                                    <div class="form">
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <div class="upload">
                                                                        <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i>Ödül Dili</p>
                                                                    </div>
                                                                    <label for="fullName">&nbsp;&nbsp;<%= find_odul.language==='tr-TR' ? 'Türkçe' : 'İngilizce' %></label>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <div class="upload">
                                                                        <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> Ödenen Tikmoney</p>
                                                                    </div>
                                                                    <label for="fullName">&nbsp;&nbsp;<%= find_odul.tikmoney%></label>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <div class="upload">
                                                                        <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i>Alınacak Ürün</p>
                                                                    </div>
                                                                    <label for="fullName">&nbsp;&nbsp;<%= find_odul.product%></label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="upload">
                                                                <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> Ödül Açıklama</p>
                                                            </div>
                                                            <input disabled type="text" class="form-control mb-4" id="profession" placeholder="Görev Açıklama" value="<%= find_odul.productDescription%>">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                            <form id="general-info" class="section general-info">
                                <div class="info">
                                    <h6 class="">Kullanıcı Bilgileri</h6>
                                    <div class="row">
                                        <div class="col-lg-11 mx-auto">
                                            <div class="row">
                                                <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4">
                                                    <div class="form">
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <div class="upload">
                                                                        <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> Kullanıcı Adı</p>
                                                                    </div>
                                                                    <label for="fullName">&nbsp;&nbsp;<%= find_odul.userName%></label>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <div class="upload">
                                                                        <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> Kullanıcı Mail</p>
                                                                    </div>
                                                                    <label for="fullName">&nbsp;&nbsp;<%= find_odul.userMail%></label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="upload">
                                                                <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i>Ödül Kullanıcı Açıklama</p>
                                                            </div>
                                                            <input disabled type="text" class="form-control mb-4" id="profession" value="<%= find_odul.userDescription%>">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                                <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                                    <form class="section about" action='../../../magaza/odul_onayla/<%=find_odul._id%>' method='POST'>
                                        <div class="info">
                                            <h5 class="">Ürün Gönderimini Onayla</h5>
                                                <div class="col-md-11 mx-auto">
                                                    <button type="submit" name="action" class="btn btn-success mb-2">Onayla</button>
                                                </div>
                                        </div>
                                    </form>
                                    &nbsp;
                                    <form class="section about" action='../../../magaza/odul_iade/<%=find_odul._id%>' method='POST'>
                                        <div class="info">
                                            <h5 class="">Kullanıcıya Tikmoney'ini İade Et</h5>
                                                <div class="col-md-11 mx-auto">
                                                    <button type="submit" name="action" class="btn btn-danger mb-2">İade Et</button>
                                                </div>
                                        </div>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>

        </div>

        </div>
</div>
<%- include('./src/footer'); %> 